[flake8]
max-line-length = 127
exclude = 
    .venv,
    venv,
    env,
    .git,
    __pycache__,
    *.pyc,
    migrations,
    node_modules,
    staticfiles,
    media,
    .tox,
    .eggs,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .coverage,
    htmlcov,
    .mypy_cache,
    .ruff_cache

ignore = 
    E203,
    W503,
    F401,
    F403,
    F405

per-file-ignores =
    __init__.py:F401
    migrations/*:F401
